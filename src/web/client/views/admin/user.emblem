unless userIsSelf
  h1.page-header= username
else
  h1.page-header
    =username
    span.small.pull-right
      span.label.label-default This is you

form.form-horizontal#editUser
  input#edituser-id type="hidden" value=_onModelUpdater
  div.form-group
    label.control-label.col-sm-2 for="edituser-type" Type:
    div.col-sm-10
      view#edituser-type Ember.Select content=userTypes value=newType classNames="form-control" disabled=canSeverelyEditThisUser
  div.form-group
    label.control-label.col-sm-2 for="edituser-pw1" New password:
    div.col-sm-10
      view#edituser-pw1 Ember.TextField type="password" classNames="form-control" value=newPassword placeholder="Super secret"
  div.form-group
    label.control-label.col-sm-2 for="edituser-pw2" New password (repeat):
    div.col-sm-10
      view#edituser-pw2 Ember.TextField type="password" classNames="form-control" value=newPasswordRepeat placeholder="Super secret (repeat)"

  div.form-actions
    div.row
      button.btn.btn-success.col-sm-6 click="saveEdit" disabled=saveDisabled Save changes
      button.btn.btn-danger.col-sm-6 click="delete" disabled=canSeverelyEditThisUser Delete user
