div.grid
  div.col-md-4
    
    / User list
    div.panel.panel-default
      div.panel-heading
        h3.panel-title Users
      / Create new user
      link-to .btn 'admin.new' | Create new Login
      ul.list-group#users
        each
          li.list-group-item click="showUser id"
            link-to 'admin.user' id | #{ username }
            div.pull-right
              span.label.label-default= type

  div.col-md-8
    / right panel
    =outlet
